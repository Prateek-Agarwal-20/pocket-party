<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FirebaseTestingActivity">

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/createFakeCueList"
            android:text="Send fake cues to firebase"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="createFakeCuesClick"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/getSingleCue"
            android:text="Get a cue from firebase"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="getSingleCueClick"/>

</android.support.constraint.ConstraintLayout>